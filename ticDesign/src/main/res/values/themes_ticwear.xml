<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ticwear" parent="android:Theme.Material.NoActionBar">

        <!-- Text styles -->
        <item name="android:textAppearance">@style/TextAppearance.Ticwear</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.Ticwear.Inverse</item>

        <item name="android:textAppearanceLarge">@style/TextAppearance.Ticwear.Large</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Ticwear.Large.Inverse</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Ticwear.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Ticwear.Medium.Inverse</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Ticwear.Small</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Ticwear.Small.Inverse</item>

        <item name="android:textAppearanceButton">@style/TextAppearance.Ticwear.Widget.Button</item>

        <item name="android:lineSpacingMultiplier">1.4</item>

        <item name="android:windowAnimationStyle">@style/Animation.Ticwear.Activity</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <!-- We need the windows to be translucent for SwipeToDismiss layout
             to work properly. -->
        <item name="android:windowIsTranslucent">false</item>   <!-- TODO: use translucent background with swipe to dismiss is set -->
        <item name="android:windowSwipeToDismiss">true</item>
        <!-- Required to force windowInsets dispatch through application UI. -->
        <item name="android:windowOverscan">true</item>

        <!-- Preference styles -->
        <item name="android:preferenceScreenStyle">@style/Preference.Ticwear.PreferenceScreen</item>
        <item name="preferenceActivityStyle">@style/PreferenceActivity.Ticwear</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Ticwear</item>
        <!--<item name="android:preferenceCategoryStyle">@style/Preference.Ticwear.Category</item>-->
        <item name="android:preferenceStyle">@style/Preference.Ticwear</item>
        <!--<item name="android:preferenceInformationStyle">@style/Preference.Ticwear.Information</item>-->
        <item name="android:checkBoxPreferenceStyle">@style/Preference.Ticwear.CheckBoxPreference</item>
        <item name="android:switchPreferenceStyle">@style/Preference.Ticwear.SwitchPreference</item>
        <!--<item name="seekBarPreferenceStyle">@style/Preference.Ticwear.SeekBarPreference</item>-->
        <!--<item name="android:yesNoPreferenceStyle">@style/Preference.Ticwear.DialogPreference.YesNoPreference</item>-->
        <!--<item name="android:dialogPreferenceStyle">@style/Preference.Ticwear.DialogPreference</item>-->
        <!--<item name="android:editTextPreferenceStyle">@style/Preference.Ticwear.DialogPreference.EditTextPreference</item>-->
        <!--<item name="android:ringtonePreferenceStyle">@style/Preference.Ticwear.RingtonePreference</item>-->
        <item name="android:preferenceLayoutChild">@layout/preference_ticwear</item>
        <item name="preferencePanelStyle">@style/PreferencePanel.Ticwear</item>
        <item name="preferenceHeaderPanelStyle">@style/PreferenceHeaderPanel.Ticwear</item>
        <item name="preferenceListStyle">@style/PreferenceHeaderList.Ticwear</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Ticwear</item>
        <item name="preferenceFragmentPaddingSide">@dimen/preference_fragment_padding_side_ticwear</item>
        <!--<item name="android:detailsElementBackground">?attr/colorBackground</item>-->

        <!-- PreferenceFrameLayout attributes -->
        <item name="preferenceFrameLayoutStyle">@style/Widget.Ticwear.PreferenceFrameLayout</item>


        <!-- List attributes -->
        <item name="android:listPreferredItemHeight">64dp</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:listPreferredItemHeightLarge">80dp</item>
        <item name="android:textAppearanceListItem">@style/TextAppearance.Ticwear.Title</item>
        <item name="android:textAppearanceListItemSmall">@style/TextAppearance.Ticwear.Body1</item>
        <item name="android:textAppearanceListItemSecondary">@style/TextAppearance.Ticwear.Body2</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/list_item_padding_horizontal_ticwear</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/list_item_padding_horizontal_ticwear</item>
        <item name="android:listPreferredItemPaddingStart">@dimen/list_item_padding_horizontal_ticwear</item>
        <item name="android:listPreferredItemPaddingEnd">@dimen/list_item_padding_horizontal_ticwear</item>
    </style>

    <style name="Theme.Ticwear.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>