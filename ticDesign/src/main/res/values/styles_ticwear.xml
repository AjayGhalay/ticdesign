    <!-- No margins or background by default. Could be different for x-large screens -->
    <style name="PreferencePanel"/>
    <style name="PreferencePanel.Ticwear">
        <item name="android:layout_marginStart">0dip</item>
        <item name="android:layout_marginEnd">0dip</item>
    </style>

    <style name="PreferenceHeaderPanel"/>
    <style name="PreferenceHeaderPanel.Ticwear">
        <item name="android:layout_marginStart">@dimen/preference_screen_side_margin_ticwear</item>
        <item name="android:layout_marginEnd">@dimen/preference_screen_side_margin_negative_ticwear</item>
        <item name="android:paddingTop">@dimen/preference_screen_header_vertical_padding_ticwear</item>
        <item name="android:paddingBottom">@dimen/preference_screen_header_vertical_padding_ticwear</item>
    </style>

    <style name="PreferenceHeaderList"/>
    <style name="PreferenceHeaderList.Ticwear">
        <item name="android:paddingStart">@dimen/preference_screen_header_padding_side_ticwear</item>
        <item name="android:paddingEnd">@dimen/preference_screen_header_padding_side_ticwear</item>
        <item name="android:scrollbarStyle">@integer/preference_screen_header_scrollbarStyle_ticwear</item>
    </style>

    <style name="PreferenceFragmentList"/>
    <style name="PreferenceFragmentList.Ticwear">
        <item name="android:paddingStart">@dimen/preference_fragment_padding_side_ticwear</item>
        <item name="android:paddingEnd">@dimen/preference_fragment_padding_side_ticwear</item>
    </style>


    <!-- Begin Ticwear theme styles -->

    <style name="Widget">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>
    <style name="Widget.Ticwear"/>

    <style name="Widget.Ticwear.PreferenceFrameLayout">
        <item name="tic_borderTop">0dip</item>
        <item name="tic_borderBottom">0dip</item>
        <item name="tic_borderLeft">?attr/tic_preferenceFragmentPaddingSide</item>
        <item name="tic_borderRight">?attr/tic_preferenceFragmentPaddingSide</item>
    </style>

    <style name="Widget.Ticwear.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>

        <item name="tic_solidColor">@android:color/transparent</item>
        <item name="tic_selectionDivider">@drawable/number_picker_divider_ticwear</item>
        <item name="tic_selectionDividerHeight">2dip</item>
        <item name="tic_internalLayout">@layout/number_picker_with_selector_wheel_ticwear</item>
        <item name="tic_internalMinWidth">64dip</item>
        <item name="tic_internalMaxHeight">180dip</item>
        <item name="tic_virtualButtonPressedDrawable">?android:selectableItemBackground</item>
    </style>

    <!-- Text styles -->

    <style name="TextAppearance"/>
    <style name="TextAppearance.Ticwear">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">@dimen/tic_text_size_body_1_ticwear</item>
        <item name="android:lineSpacingMultiplier">?android:lineSpacingMultiplier</item>
        <item name="android:fontFamily">@string/tic_font_family_body_1_ticwear</item>
    </style>


    <style name="TextAppearance.Ticwear.Title">
        <item name="android:textSize">@dimen/tic_text_size_title_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_title_ticwear</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Ticwear.Title.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="TextAppearance.Ticwear.Body2">
        <item name="android:textSize">@dimen/tic_text_size_body_2_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_body_2_ticwear</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Ticwear.Body1">
        <item name="android:textSize">@dimen/tic_text_size_body_1_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_body_1_ticwear</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Ticwear.Hint1">
        <item name="android:textSize">@dimen/tic_text_size_hint_1_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_body_1_ticwear</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Ticwear.Hint2">
        <item name="android:textSize">@dimen/tic_text_size_hint_2_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_body_2_ticwear</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Ticwear.Button">
        <item name="android:textSize">@dimen/tic_text_size_button_ticwear</item>
        <item name="android:fontFamily">@string/tic_font_family_button_ticwear</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Deprecated text styles -->

    <style name="TextAppearance.Ticwear.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
