<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ticwear.design.widget.NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tic_numberPicker"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/num_unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_toEndOf="@+id/tic_numberPicker"
        android:layout_marginLeft="@dimen/number_picker_dialog_unit_text_margin_left"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

</RelativeLayout>